<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/content_inset_medium"
    android:background="@drawable/ripple_cookies"
    android:padding="@dimen/content_inset_normal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_warning" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCookies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_inset_normal"
        android:fontFamily="@font/mulish_regular"
        android:text="@string/cookies_label"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textSize="@dimen/text_size_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivWarning"
        app:layout_constraintTop_toTopOf="@id/ivWarning" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/btnApproveCookies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_inset_small"
        android:fontFamily="@font/mulish_regular"
        android:text="@string/accept"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textSize="@dimen/text_size_body"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvCookies"
        app:layout_constraintTop_toBottomOf="@id/tvCookies" />

</androidx.constraintlayout.widget.ConstraintLayout>
