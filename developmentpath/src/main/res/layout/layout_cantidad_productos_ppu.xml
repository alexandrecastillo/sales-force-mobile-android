<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_cantidad_productos_ppu"
    android:paddingStart="@dimen/content_inset_small"
    android:paddingTop="@dimen/rdd_margin_start_tiny"
    android:paddingEnd="@dimen/content_inset_small"
    android:paddingBottom="@dimen/rdd_margin_start_tiny">

    <TextView
        android:id="@+id/tvCantidadProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_caption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="@dimen/ppu_width"
        android:layout_height="@dimen/ppu_height"
        android:layout_marginStart="@dimen/content_inset_tiny"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvCantidadProductos"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_ppu_productos" />

</androidx.constraintlayout.widget.ConstraintLayout>
