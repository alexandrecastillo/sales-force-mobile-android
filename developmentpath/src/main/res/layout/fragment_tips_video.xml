<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlViewVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtTitleVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:paddingTop="@dimen/content_inset_normal"
            android:paddingBottom="@dimen/content_inset_small"
            android:text="¿Comó pasar pedido web?" />

        <FrameLayout
            android:id="@+id/youtube_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitleVideo" />

        <ImageView
            android:id="@+id/iconShared"
            android:layout_width="16.5dp"
            android:layout_height="13.5dp"
            android:layout_alignTop="@+id/txtShared"
            android:layout_marginEnd="@dimen/content_inset_tiny"
            android:layout_toStartOf="@id/txtShared"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_share" />

        <TextView
            android:id="@+id/txtShared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youtube_fragment"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/content_inset_less"
            android:layout_marginEnd="@dimen/content_inset_less"
            android:fontFamily="@font/mulish_bold"
            android:text="COMPARTIR" />

    </RelativeLayout>

</LinearLayout>
