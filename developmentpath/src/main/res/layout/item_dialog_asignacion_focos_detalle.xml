<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:animateLayoutChanges="true">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/btn_seleccionar_foco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_button_foco_seleccionado"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/mulish_bold"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:minHeight="40dp"
        android:textColor="#494b4e"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pedidos de alto valor" />

    <View
        android:id="@+id/fondoSeleccion"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/background_seleccion_foco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iconoSeleccion"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:padding="2.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_blanco"
        android:visibility="invisible"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
