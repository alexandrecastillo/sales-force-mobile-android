<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/content_inset_normal"
    android:layout_marginStart="@dimen/content_inset_normal"
    android:background="@drawable/background_dialog_rdd_success">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_dialog_registrar_success"
            android:layout_width="90dp"
            android:layout_height="74dp"
            android:layout_marginTop="@dimen/content_inset_medium"
            android:contentDescription="@null"
            app:srcCompat="@drawable/icon_medal_star"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_dialog_registrar_success_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_inset_small"
            android:layout_marginStart="@dimen/content_inset_small"
            android:layout_marginTop="@dimen/content_inset_small"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center_horizontal"
            android:text="@string/rdd_reconocimiento_success_titulo"
            android:textColor="@color/white"
            android:textSize="17.5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_dialog_registrar_success" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="42dp"
            android:layout_marginEnd="@dimen/content_inset_normal"
            android:layout_marginStart="@dimen/content_inset_normal"
            android:layout_marginTop="@dimen/content_inset_normal"
            android:gravity="center"
            android:fontFamily="@font/mulish_regular"
            android:text="@string/rdd_reconocimiento_success_subtitulo"
            android:textColor="@color/rdd_reconocimiento_success_subtitulo"
            android:textSize="18.5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_dialog_registrar_success_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_inset_small"
            android:layout_marginTop="@dimen/content_inset_small"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_delete_x" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
