<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_rdd_success">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/rdd_margin_start_low"
        android:layout_height="@dimen/rdd_margin_start_low"
        android:layout_marginEnd="@dimen/rdd_margin_top"
        android:layout_marginTop="@dimen/rdd_margin_top"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_white" />

    <ImageView
        android:id="@+id/iv_reconocimiento"
        android:layout_width="@dimen/icon_size_huge"
        android:layout_height="@dimen/icon_size_huge"
        android:layout_marginTop="@dimen/rdd_margin_start_large_tiny"
        android:scaleType="fitCenter"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_gz_reconocida_exito" />

    <TextView
        android:id="@+id/tv_reconocidas_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rdd_margin_min"
        android:fontFamily="@font/mulish_bold"
        android:text="@string/reconocida_con_exito"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_subtitle_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_reconocimiento" />

    <TextView
        android:id="@+id/tv_reconocidas_sugerencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rdd_padding_start_low"
        android:layout_marginEnd="@dimen/rdd_margin_min"
        android:layout_marginStart="@dimen/rdd_margin_low"
        android:layout_marginTop="@dimen/rdd_margin_start_large"
        android:fontFamily="@font/mulish_regular"
        android:gravity="center"
        android:lineSpacingMultiplier="1.15"
        android:text="@string/reconocida_sugerencia"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reconocidas_titulo" />

</androidx.constraintlayout.widget.ConstraintLayout>
