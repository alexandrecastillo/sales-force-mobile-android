<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/content_inset_tiniest"
    android:layout_marginEnd="@dimen/content_inset_tiniest">

    <LinearLayout
        android:id="@+id/ll_datos_basicos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/content_inset_medium"
        android:layout_marginTop="@dimen/content_inset_normal"
        android:layout_marginEnd="@dimen/content_inset_medium"
        android:layout_marginBottom="@dimen/content_inset_normal"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/content_inset_small"
            android:layout_weight="0.2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_seccion_datos" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/content_inset_small"
            android:layout_marginEnd="@dimen/content_inset_small"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUAGzGr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:singleLine="true"
                android:text="@string/perfil_tab_zona_titulo"
                android:textColor="@color/rdd_dashboard_text"
                android:textSize="@dimen/text_size_caption"
                tools:text="Zona 6011" />

            <TextView
                android:id="@+id/tvRolGzGr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_inset_small"
                android:fontFamily="@font/mulish_regular"
                android:singleLine="true"
                android:text="@string/text_gerente_zona"
                android:textColor="@color/titles"
                android:textSize="@dimen/text_size_body"
                tools:text="Gerente de Zona" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/content_inset_small"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEstadoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:singleLine="true"
                android:text="@string/perfil_tab_estado_gz"
                android:textColor="@color/color_persona_1"
                android:textSize="@dimen/text_size_caption"
                tools:text="Estado C10" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_inset_small"
                android:fontFamily="@font/mulish_regular"
                android:singleLine="true"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_size_body"
                tools:text="Productiva" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
