<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content_inset_normal">

    <LinearLayout
        android:id="@+id/ll_titulo_campania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/content_inset_normal"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_campana_campan" />

        <TextView
            android:id="@+id/txt_titulo_campana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rdd_margin_min_less"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center_vertical"
            android:text="@string/perfil_campania_campania"
            android:textColor="@color/mi_ruta_accent"
            android:textSize="@dimen/text_size_body" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_acuerdos_reconocimientos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_inset_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_titulo_campania" />

</androidx.constraintlayout.widget.ConstraintLayout>
