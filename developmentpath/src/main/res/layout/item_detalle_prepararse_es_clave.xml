<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="104dp"
    android:layout_height="48dp"
    android:paddingStart="@dimen/content_inset_tiny"
    android:paddingEnd="@dimen/content_inset_tiny"
    app:cardCornerRadius="@dimen/content_inset_tiny">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_layout_black"
        android:paddingStart="@dimen/content_inset_tiny"
        android:paddingEnd="@dimen/content_inset_tiny">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNombreOpcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lo mas vendido" />

        <View
            android:id="@+id/vwUnderline"
            android:layout_width="0dp"
            android:layout_height="@dimen/one"
            android:layout_marginTop="@dimen/content_inset_tiniest"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/txtNombreOpcion"
            app:layout_constraintStart_toStartOf="@id/txtNombreOpcion"
            app:layout_constraintTop_toBottomOf="@id/txtNombreOpcion" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
