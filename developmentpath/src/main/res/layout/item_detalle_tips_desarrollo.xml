<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/section_width"
    android:layout_height="@dimen/section_height"
    android:paddingStart="@dimen/content_inset_tiny"
    android:paddingEnd="@dimen/content_inset_tiny"
    app:cardCornerRadius="@dimen/ds_radius_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_layout_black"
        android:paddingStart="@dimen/content_inset_tiny"
        android:paddingEnd="@dimen/content_inset_tiny">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNombreOpcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Venta y Ganancia C10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
