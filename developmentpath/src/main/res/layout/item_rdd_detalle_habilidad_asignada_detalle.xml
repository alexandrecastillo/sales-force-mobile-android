<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/content_inset_small">

    <ImageView
        android:id="@+id/iv_detalle_habilidad_punto"
        android:layout_width="@dimen/icon_size_small_more_less"
        android:layout_height="@dimen/icon_size_small_more_less"
        android:layout_marginTop="@dimen/content_inset_tiniest"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_punto_azul" />

    <TextView
        android:id="@+id/tv_descripcion_detalle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_inset_tiny"
        android:layout_marginEnd="@dimen/content_inset_tiniest"
        android:fontFamily="@font/mulish_regular"
        android:text="@string/detail_description_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_detalle_habilidad_punto"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
