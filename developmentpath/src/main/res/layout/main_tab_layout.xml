<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mainTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="@dimen/content_inset_double"
        app:layout_collapseMode="pin"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/magenta"
        app:tabIndicatorHeight="@dimen/two"
        app:tabMode="scrollable"
        app:tabPaddingEnd="@dimen/content_inset_normal"
        app:tabPaddingStart="@dimen/content_inset_normal"
        app:tabSelectedTextColor="@color/magenta"
        app:tabTextAppearance="@style/TextAppearance.TabLayout.Tab"
        app:tabTextColor="@color/gray_4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="@color/gray_1" />

</LinearLayout>
