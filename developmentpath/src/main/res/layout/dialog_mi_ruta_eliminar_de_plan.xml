<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_rdd">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ds_margin_other_20"
        android:layout_marginEnd="@dimen/ds_margin_other_20">

        <ImageView
            android:id="@+id/image_alerta_eliminar_consultora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_inset_medium"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_alerta_eliminar_consultora" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_ruta_eliminar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_inset_small"
            android:fontFamily="@font/mulish_regular"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/rdd_margin_start"
            android:paddingEnd="@dimen/rdd_margin_start"
            android:text="@string/mi_ruta_eliminar_message"
            android:textColor="@color/mi_ruta_eliminar_title"
            android:textSize="@dimen/text_size_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_alerta_eliminar_consultora" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_eliminar_de_plan_cancel"
            style="@style/Widget.Button.OutlinedButton.Black.Variant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_inset_normal"
            android:layout_marginTop="@dimen/content_inset_large"
            android:layout_marginEnd="@dimen/content_inset_small"
            android:fontFamily="@font/mulish_bold"
            android:stateListAnimator="@null"
            android:text="@string/mi_ruta_eliminar_cancel"
            app:layout_constraintEnd_toStartOf="@+id/button_eliminar_de_plan_confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ruta_eliminar_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_eliminar_de_plan_confirm"
            style="@style/Widget.Button.Red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_inset_small"
            android:layout_marginTop="@dimen/content_inset_large"
            android:layout_marginEnd="@dimen/content_inset_normal"
            android:layout_marginBottom="@dimen/content_inset_large"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/mi_ruta_eliminar_confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_eliminar_de_plan_cancel"
            app:layout_constraintTop_toBottomOf="@+id/text_ruta_eliminar_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
