<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clContenedorTipsEstablecidas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/content_inset_normal">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rdd_banner_height"
        android:layout_marginStart="@dimen/content_inset_normal"
        android:layout_marginEnd="@dimen/content_inset_normal"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/banner_establecidas"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/framelayoutTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_margin_normal"
        android:layout_marginTop="@dimen/ds_margin_normal"
        android:layout_marginRight="@dimen/ds_margin_normal"
        app:layout_constraintTop_toBottomOf="@id/banner" />

</androidx.constraintlayout.widget.ConstraintLayout>
