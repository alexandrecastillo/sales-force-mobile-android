<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/inspira_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivwInspiraRankingHeaderIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/view_inspira_8dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_medal" />

    <TextView
        android:id="@+id/tvwInspiraRankingHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/view_inspira_8dp"
        android:layout_marginTop="@dimen/view_inspira_8dp"
        android:layout_marginEnd="@dimen/view_inspira_8dp"
        android:layout_marginBottom="@dimen/view_inspira_8dp"
        android:fontFamily="@font/mulish_regular"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/view_inspira_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivwInspiraRankingHeaderIcon"
        tools:text="@string/progress_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_dimen_component_x1"
        android:layout_marginTop="@dimen/material_dimen_component_x2"
        android:layout_marginEnd="@dimen/material_dimen_component_x1">

        <include layout="@layout/item_inspire_travel_ranking_header" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyRankingBlockOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_dimen_component_x1"
        android:layout_marginEnd="@dimen/material_dimen_component_x1"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/llyRankingBlockTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_dimen_component_x1"
        android:layout_marginTop="@dimen/view_inspira_25dp"
        android:layout_marginEnd="@dimen/material_dimen_component_x1"
        android:layout_marginBottom="@dimen/view_inspira_25dp"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/llyRankingBlockThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_dimen_component_x1"
        android:layout_marginEnd="@dimen/material_dimen_component_x1"
        android:orientation="vertical" />

</LinearLayout>
