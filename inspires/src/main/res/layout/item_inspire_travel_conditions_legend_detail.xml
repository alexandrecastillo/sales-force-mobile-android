<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clyInspireConditionSubItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/view_inspira_2dp"
    android:paddingBottom="@dimen/view_inspira_2dp">

    <TextView
        android:id="@+id/txvInspireConditionSubItemBullet"
        style="@style/AppTheme.Inspire.TextView.Normal"
        android:layout_width="@dimen/view_inspira_0dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/txvInspireConditionSubItemPoints"
        android:paddingEnd="@dimen/view_inspira_4dp"
        android:text="@string/inspira_condition_bullet_point"
        android:textColor="@color/gray_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvInspireConditionSubItemDescription"
        style="@style/AppTheme.Inspire.TextView.Normal"
        android:layout_width="@dimen/view_inspira_0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/gray_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@id/txvInspireConditionSubItemBullet"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/view_inspira_64dp" />

    <TextView
        android:id="@+id/txvInspireConditionSubItemPoints"
        style="@style/AppTheme.Inspire.TextView.Normal"
        android:layout_width="@dimen/view_inspira_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_inspira_0dp"
        android:background="@drawable/background_inspira_points_item_green"
        android:gravity="end"
        android:padding="@dimen/view_inspira_5dp"
        android:paddingTop="@dimen/view_inspira_2dp"
        android:paddingBottom="@dimen/view_inspira_2dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="13pt" />

</androidx.constraintlayout.widget.ConstraintLayout>
