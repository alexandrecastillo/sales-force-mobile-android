<resources>

    <style name="AppTheme.TextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Inspire.TextView.Small" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/view_inspira_12sp</item>
    </style>

    <style name="AppTheme.Inspire.TextView.Normal" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/view_inspira_14sp</item>
    </style>

    <style name="AppTheme.Inspire.TextView.Normal.Bold" parent="AppTheme.Inspire.TextView.Normal">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="AppTheme.Inspire.TextView.Small.Bold" parent="AppTheme.Inspire.TextView.Small">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="NavigationTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/titles</item>
        <item name="tabTextColor">@color/titles_2</item>
        <item name="tabIndicatorColor">@color/light_gray</item>
        <item name="tabIndicatorHeight">@dimen/view_inspira_5dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
    </style>

</resources>
