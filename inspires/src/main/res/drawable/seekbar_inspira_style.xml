<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@android:id/background"
        android:gravity="center_vertical|fill_horizontal|clip_horizontal">
        <shape
            android:shape="rectangle"
            android:tint="@color/indicator_inspire_light">
            <corners android:radius="8dp" />
            <size android:height="8dp" />
            <solid android:color="@color/indicator_inspire_light" />
        </shape>

    </item>

    <item
        android:id="@android:id/progress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <selector>
                <item
                    android:drawable="@android:color/transparent"
                    android:state_enabled="false" />
                <item>
                    <shape
                        android:shape="rectangle"
                        android:tint="@color/indicator_inspire">
                        <corners android:radius="8dp" />
                        <size android:height="8dp" />
                        <solid android:color="@color/indicator_inspire" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>