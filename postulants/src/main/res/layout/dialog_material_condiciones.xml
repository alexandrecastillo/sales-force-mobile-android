<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dialog_condicion_cardview_radius"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dialog_condicion_paddingStart_1"
        android:paddingTop="@dimen/dialog_condicion_paddingTop_1"
        android:paddingEnd="@dimen/dialog_condicion_paddingEnd_1"
        android:paddingBottom="@dimen/dialog_condicion_paddingBottom_1">

        <ImageView
            android:id="@+id/ivIconCondiciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="@dimen/dialog_condicion_paddingTop_3"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_icon_archivos" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvContent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_condicion_paddingTop_4"
            android:fontFamily="@font/mulish_regular"
            android:gravity="center"
            android:textSize="@dimen/dialog_condicion_size_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIconCondiciones"
            tools:text="La validaciÃ³n crediticia no ha sido completada." />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvContent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:gravity="center"
            android:textSize="@dimen/dialog_condicion_size_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContent1"
            tools:text="Puedes ponerte en contacto con Servicio al Cliente" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOk"
            style="@style/Widget.Button.White.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_condicion_paddingTop_2"
            android:layout_marginBottom="@dimen/dialog_condicion_paddingBottom_2"
            android:background="@color/purple"
            android:fontFamily="@font/mulish_bold"
            android:paddingStart="@dimen/dialog_condicion_paddingLeft_1"
            android:paddingEnd="@dimen/dialog_condicion_paddingRight_1"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_condicion_size_value_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContent2"
            tools:text="@string/tx_entendido" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
