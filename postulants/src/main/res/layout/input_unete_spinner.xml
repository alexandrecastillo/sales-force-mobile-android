<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtHint"
                style="@style/uneteInput_InputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:textSize="11sp"
                tools:ignore="SmallSp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:background="@drawable/background_spinner"
                android:gravity="center">

                <Spinner
                    android:id="@+id/spnComponent"
                    style="@style/uneteInput_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/icValidation"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/ds_margin_small"
            android:layout_marginBottom="@dimen/margin_0dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_validation_neutral" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtMesssage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:fontFamily="@font/mulish_regular"
        android:textColor="#d90015"
        android:textSize="11sp"
        tools:ignore="SmallSp"
        tools:text="Campo obligatorio" />

</LinearLayout>
