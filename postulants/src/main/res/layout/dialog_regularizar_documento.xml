<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/ds_padding_medium"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/ds_padding_other_2"
        android:paddingTop="@dimen/ds_padding_large"
        android:paddingEnd="@dimen/ds_padding_other_2"
        android:paddingBottom="@dimen/ds_padding_large">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_registro_posibleconsultora" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_padding_normal"
            android:fontFamily="@font/mulish_black"
            android:text="@string/unete_success_thanks_title"
            android:textColor="@color/purple"
            android:textSize="@dimen/title_1"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ds_margin_small"
            android:layout_marginTop="@dimen/ds_padding_other_2"
            android:layout_marginEnd="@dimen/ds_margin_small"
            android:background="@color/grey_dialog"
            android:fontFamily="@font/mulish_regular"
            android:padding="@dimen/ds_padding_medium"
            android:text="@string/unete_success_regularizar_message"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareAppFromDoc"
            style="@style/Widget.Button.Purple.ShareLink"
            android:text="@string/unete_success_share_app" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
