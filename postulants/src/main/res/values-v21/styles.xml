<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewConsultantDisplayStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="CardViewConsultantGroupStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">16.5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="CardStyle" parent="CardView">
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="unete_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#768ea3</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:buttonTint">#768ea3</item>
    </style>


    <style name="unete_dtpicker_spinner">
        <item name="android:textColorPrimary">@color/unete_text</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:colorControlNormal">#009999</item>
    </style>

    <style name="item_postulante_card">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">3dp</item>
        <item name="android:orientation">vertical</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="uneteInput_Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textAppearance">@style/inputText_style</item>
        <item name="android:backgroundTint">#80637b92</item>
    </style>

    <style name="uneteInput_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textAppearance">@style/inputText_style</item>
        <item name="android:backgroundTint">@color/unete_action</item>
    </style>

    <style name="unete_dtpicker_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/unete_text</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
    </style>

    <!-- TipografÃ­a oficial -->

    <style name="Button" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:letterSpacing">0.015</item>
    </style>

    <style name="Label" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:letterSpacing">0.015</item>
    </style>

    <!-- Nuevos Botones -->
    <style name="Button.Primary" parent="android:Widget.Button">
        <item name="android:minHeight">42dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:background">@drawable/selector_background_btn_primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
    </style>

    <style name="Button.Secondary" parent="android:Widget.Button">
        <item name="android:minHeight">42dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:background">@drawable/selector_background_btn_secondary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
    </style>

</resources>
