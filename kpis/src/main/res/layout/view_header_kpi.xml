<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSingleItemHeaderLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_inset_less"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvHeaderAmount"
        tools:text="GAINING AMOUNT OF: " />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeaderAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_inset_less"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvSingleItemHeaderLabel"
        tools:text="S/ 1.000.000" />

</androidx.constraintlayout.widget.ConstraintLayout>
