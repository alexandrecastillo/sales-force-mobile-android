<resources>

    <!-- Widget styles -->

    <style name="Widget" parent="@android:style/Widget.Material" />

    <style name="Widget.BottomNavigation.Text" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Widget.BottomNavigation.Text.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="rippleColor">@color/colorSpotShadow</item>
        <item name="cardCornerRadius">@dimen/ds_radius_4</item>
        <item name="cardElevation">@dimen/ds_elevation_4</item>
        <item name="cardMaxElevation">@dimen/ds_elevation_8</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.Toolbar.Text" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="Widget.TextView.Title" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_title_2</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Widget.TextView.Description" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:elevation">@dimen/ds_elevation_4</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="Widget.Toolbar.Light">
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="android:background">@color/colorSurface</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.ActionBar.Light</item>
    </style>

    <style name="Widget.Toolbar.Dark">
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="android:background">@color/black</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.ActionBar.Dark</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_title_2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.TabLayout.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.SearchView" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColorHint">@color/textColorTernary</item>
        <item name="android:textColor">@color/textColorTernary</item>
    </style>

    <style name="TextAppearance.Toolbar.Title.Centered" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Widget.Button.Green">
        <item name="backgroundTint">@color/colorButtonVariant</item>
        <item name="android:backgroundTint">@color/colorButtonVariant</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <style name="Widget.Fractal.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabMinWidth">@dimen/tab_min_width</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorColor">@color/tab_indicator_color</item>
        <item name="android:background">@drawable/bg_fractal_tab_layout</item>
        <item name="tabSelectedTextColor">@color/magenta</item>
        <item name="tabTextAppearance">@style/TextAppearance.TabLayout.Tab</item>
    </style>

</resources>
