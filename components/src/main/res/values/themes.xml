<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.MaterialComponents.ActionBar.Light" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:colorBackground">@color/colorSurface</item>
        <item name="android:popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.ActionBar.Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

</resources>
